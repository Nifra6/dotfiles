// ------------------------------------------------------------------------------------------------------
// ---                             Fichier de configuration de Waybar                                 ---
// ------------------------------------------------------------------------------------------------------

{

    // -----------------------------------------------------
    // ---             Configuration globale             ---
    // -----------------------------------------------------

    // Forme de la barre
    "position": "top",
    "height": 30,

    // Ordres des modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "custom/media",
        "custom/pacman"
    ],
    "modules-center": [
        "idle_inhibitor",
        "clock",
        "tray"
    ],
    "modules-right": [
        "disk",
        "network",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "pulseaudio",
        "battery"
    ],



    // -----------------------------------------------------
    // ---      Configuration des modules : gauche       ---
    // -----------------------------------------------------

    // Workspace
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}"
    },

    // Mode de Sway
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    // Afficheur m√©dia
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 80,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "sh $HOME/.config/waybar/mediaplayer.sh"
    },

    "custom/pacman": {
        "format": " {icon} {} ",
        "return-type": "json",
        "format-icons": {
            "uptodate": "\uf00c",
            "available": "\uf019"
        },
        "interval": 600,
        "exec": "sh $HOME/.config/waybar/pacman.sh",
        "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c update", // update system
        "signal": 8
    },

    // -----------------------------------------------------
    // ---      Configuration des modules : milieu       ---
    // -----------------------------------------------------

    // D√©sactivation de la veille
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    // Tray
    "tray": {
        "spacing": 10
    },

    // Horloge
    "clock": {
        "timezone": "Europe/Paris",
        "format": "{:L%A %d %B | %H:%M}",
        "locale": "fr_FR.utf8",
    },



    // -----------------------------------------------------
    // ---      Configuration des modules : droite       ---
    // -----------------------------------------------------

    // Espace disque
    "disk": {
        "interval": 30,
        "format": "{free} libres",
        "path": "/",
        "on-click": "filelight",
    },

    // R√©seau
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "D√©connect√© Ôõø",
        "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c nmtui",
        "interval": 10
    },


    // Usage processeur
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false,
        "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c btop"
    },

    // RAM
    "memory": {
        "format": "{}% ÔÉâ",
        "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c btop"
    },

    // Temp√©rature processeur
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    // Luminosit√©
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["ÔÜÖ", "ÔÑë"],
        "on-click": "pkill -USR1 redshift"
    },

    // Son
    "pulseaudio": {
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },

    // Batterie
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} | {capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },



    // -----------------------------------------------------
    // ---            Modules peu importants             ---
    // -----------------------------------------------------

    //"custom/left-arrow": {
    //  "format": "ÓÇ≤",
    //  "tooltip": false
    //},

}
