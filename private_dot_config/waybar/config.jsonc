// ------------------------------------------------------------
// ---                     waybar config                    ---
// ------------------------------------------------------------
{
  // --------------------------------------------------------
  // ---                   global config                  ---
  // --------------------------------------------------------

  // -- Bar shape
  // ---------------------------
  "height": 40,
  "layer": "top",
  "position": "top",

  // -- Modules order
  // ---------------------------
  "modules-left": [
    "custom/system",
    "hyprland/workspaces",
    "custom/pacman",
    "custom/media",
    "hyprland/submap",
  ],
  "modules-center": [
    "idle_inhibitor",
    "custom/weather",
    "clock#date",
    "clock#hour",
    "tray",
  ],
  "modules-right": [
    "network",
    "disk",
    // "cpu",
    // "memory",
    // "temperature",
    "pulseaudio",
    "backlight",
    "battery",
  ],

  // --------------------------------------------------------
  // ---                left modules config               ---
  // --------------------------------------------------------

  // -- System & reload bar
  // ---------------------------
  "custom/system": {
    "format": "ÔåÉ",
    "on-click": "wleave -b 2 -c 16 -r 16 -L 500 -R 500 -T 150 -B 150",
    "on-click-right": "killall -SIGUSR2 waybar",
    "tooltip": false,
  },

  // -- Workspaces
  // ---------------------------
  "hyprland/workspaces": {
    "all-outputs": true,
    "disable-scroll": true,
    "format": "{icon}: {windows}",
    "format-window-separator": " ",
    "window-rewrite-default": "ü§î",
    "window-rewrite": {
      "class<firefox> title<.*youtube.*>": "ÔÖ™ ",
      "class<firefox> title<.*twitch.*>": "Û∞ïÉ ",
      "class<firefox> title<.*gitlab.*>": "Û∞Æ† ",
      "class<firefox> title<.*github.*>": "Û∞ä§ ",
      "class<firefox>": "Û∞àπ ",
      "class<heroic>": "Û±¢æ ",
      "class<kitty> title<v>": "ÓüÖ ",
      "class<kitty>": "Óûï ",
      "class<code-oss>": "Û∞®û ",
      "class<feh>": "Û∞ã© ",
      "class<mpv>": "ÔçÆ ",
      "class<org.gnome.Nautilus>": "Û∞ù∞ ",
      "class<Spotify>": "Û∞ìá ",
      "class<Chromium>": "Û∞äØ ",
      "class<Brave-browser>": "Û∞äØ ",
      "class<*pavucontrol>": "Û±üõ",
      "class<Zotero>": "Û∞Ç∫",
      "class<thunderbird>": "Ôç∞",
      "class<org.qbittorrent.qBittorrent>": "Û∞õ¥ ",
      "class<org.pwmt.zathura>": "Û∞à¶ ",
      "class<proton-bridge>": "Û∞òò ",
      "class<discord>": "Û∞ôØ",
      "class<*filelight>": "Û∞É¢",
      "class<steam>": "Û∞ìì",
      "class<steam_app_*>": "Û∞äñ ",
      "class<wineboot.exe>": "Û∞°∂ ",
      "class<factorio>": "Û∞äñ ",
    },
  },

  // -- Compositor mode
  // ---------------------------
  "hyprland/submap": {
    "format": "<span style=\"italic\">{}</span>",
  },

  // -- System updates
  // ---------------------------
  "custom/pacman": {
    "exec": "python $HOME/.config/waybar/pacman/pacman.py",
    "exec-on-event": true,
    "format": "{icon}{0}",
    "format-icons": {
      "available": "Û∞ö∞",
      "uptodate": "Û∞ó°",
    },
    "interval": 600,
    "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c update",
    "return-type": "json",
  },

  // -- Multimedia
  // ---------------------------
  "custom/media": {
    "escape": true,
    "exec": "zsh $HOME/.config/waybar/mediaplayer/mediaplayer.sh",
    "format": "{icon} {0}",
    "format-icons": {
      "default": "Û∞ùö",
      "firefox": "",
      "mpv": "ÔçÆ",
      "spotify": "Û∞ìá",
    },
    "max-length": 80,
    "on-click": "playerctl play-pause",
    "on-click-middle": "playerctl previous",
    "on-click-right": "playerctl next",
    "return-type": "json",
  },

  // --------------------------------------------------------
  // ---               middle modules config              ---
  // --------------------------------------------------------

  // -- Idle
  // ---------------------------
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "Û∞àà",
      "deactivated": "Û∞àâ",
    },
    "tooltip-format-activated": "Veille d√©sactiv√©e",
    "tooltip-format-deactivated": "Veille activ√©e",
  },

  // -- Weather
  // ---------------------------
  "custom/weather": {
    "exec": "python $HOME/.config/waybar/weather/weather.py",
    "format": "{}",
    "interval": 600,
    "return-type": "json",
    "tooltip": true,
  },

  // -- Clock
  // ---------------------------
  "clock#date": {
    "format": "{:L%A %d %B} ",
    "locale": "fr_FR.utf8",
    "timezone": "Europe/Paris",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
    },
  },
  "clock#hour": {
    "format": " {:%H:%M}",
    "locale": "fr_FR.utf8",
    "timezone": "Europe/Paris",
    "tooltip": false,
  },

  // -- System tray
  // ---------------------------
  "tray": {
    "spacing": 10,
  },

  // --------------------------------------------------------
  // ---               right modules config               ---
  // --------------------------------------------------------

  // -- Network
  // ---------------------------
  "network": {
    "format-disconnected": "D√©connect√© Û∞åô",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr} Û∞àÄ",
    "format-linked": "{ifname} (No IP) Û∞åò",
    "format-wifi": "{essid} ({signalStrength}%) Û∞ñ©",
    "interval": 10,
    "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c nmtui",
    "tooltip": false,
  },

  // -- Free disk space
  // ---------------------------
  "disk": {
    "format": "{free} Û∞ãä",
    "interval": 30,
    "on-click": "filelight",
    "path": "/",
    "states": {
      "critical": 90,
      "warning": 75,
    },
    "tooltip": false,
  },

  // -- CPU
  // ---------------------------
  "cpu": {
    "format": "{usage}% Û∞ª†",
    "interval": 20,
    "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c btop",
    "tooltip": false,
  },

  // -- RAM
  // ---------------------------
  "memory": {
    "format": "{}% Û∞çõ",
    "interval": 20,
    "on-click": "kitty --class kitty-scratch -c ~/.config/kitty/kitty-scratch.conf zsh -i -c btop",
    "tooltip": false,
  },

  // -- Laptop temperature
  // ---------------------------
  "temperature": {
    "critical-threshold": 70,
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Û±ÉÉ", "Û∞îè", "Û±ÉÇ"],
    "interval": 20,
    "tooltip": false,
  },

  // -- Brightness
  // ---------------------------
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["Û∞Ñ∞", "Û±éñ", "Û∞ÑØ"],
    "interval": 20,
    "on-click": "pkill -USR1 redshift",
    "tooltip": false,
  },

  // -- Sound
  // ---------------------------
  "pulseaudio": {
    "interval": 20,
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}Û∞ÇØ {format_source}",
    "format-bluetooth-muted": "Û∞ùü{icon}Û∞ÇØ {format_source}",
    "format-muted": "Û∞ùü {format_source}",
    "format-source": "{volume}% Û∞ç¨",
    "format-source-muted": "Û∞ç≠",
    "format-icons": {
      "headphone": "Û∞ãã",
      "hands-free": "Û∞ãã",
      "headset": "Û∞ãé",
      "phone": "Û∞è≤",
      "portable": "Û∞è≤",
      "car": "Û∞Ñã",
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    },
    "on-click": "pavucontrol",
  },

  // -- Laptop battery
  // ---------------------------
  "battery": {
    "interval": 20,
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Û∞ÇÑ",
    "format-plugged": "{capacity}% Û∞ö•",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "states": {
      "critical": 15,
      "warning": 30,
    },
    "tooltip": true,
    "tooltip-format": "Temps restant : {time}",
  },
}
